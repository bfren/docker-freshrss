#!/usr/bin/with-contenv bash

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# If FRESHRSS_DATA is empty, the content setup has not worked correctly.
#======================================================================================================================

[[ -z "$(ls -A ${FRESHRSS_DATA})" ]] && bf-error "${FRESHRSS_DATA} is empty."


#======================================================================================================================
# Generate a new salt.
#======================================================================================================================

freshrss-generate-salt
